{
  "$id": "user.json",
  "$schema": "https://github.com/sdslabs/nymeria/blob/json-schema/user.json",
  "title": "users",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "phone_number": {
          "type": "string",
          "title": "Phone Number"
        },
        "password": {
          "type": "string",
          "title": "Password"
        },
        "img_url": {
          "type": "string",
          "title": "Profile Image URL"
        },
        "active": {
          "type": "boolean",
          "title": "Active"
        },
        "verified": {
          "type": "integer",
          "title": "Verified"
        },
        "role": {
          "type": "string",
          "title": "Role"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "title": "Created At"
        }
      },

      "required": [
        "email",
        "name",
        "phone_number",
        "role",
        "active",
        "created_at"
      ],
      "additionalProperties": false
    }
  }
}
