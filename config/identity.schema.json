{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "users",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "totp": {
                "account_name": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "phone_number": {
          "type": "string",
          "title": "Phone Number"
        },
        "password": {
          "type": "string",
          "title": "Password"
        },
        "img_url": {
          "type": "string",
          "title": "Profile Image URL"
        },
        "active": {
          "type": "boolean",
          "title": "Active"
        },
        "verified": {
          "type": "boolean",
          "title": "Verified"
        },
        "role": {
          "type": "string",
          "title": "Role"
        },
        "created_at": {
          "type": "string",
          "title": "Created At"
        },
        "totp_enabled": {
          "type": "boolean",
          "title": "Whether user has enabled totp"
        }
      },

      "required": [
        "email",
        "name",
        "phone_number",
        "role",
        "active",
        "created_at",
        "totp_enabled"
      ],
      "additionalProperties": false
    }
  }
}